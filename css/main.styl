$cyan = #E6F0F0
$orange = #DD3E18

body
	margin 0

.main-container
	display flex
	flex-direction column

	h1
	h2
	h3
		font-family Helvetica
		text-align center

	h1
		font-size 32px
		line-height 40px
	h2
		font-size 24px
		line-height 29px		
	h3
		font-size 16px
		line-height 19px

	a
		font-family Georgia
		font-size 16px
		color $orange
		line-height 24px
		text-decoration none
				
	header
		padding 30px 16px
		background-color #082841

		h1
		h2
		h3
			color #FFFFFF

		img
			margin-left 25%
			width 50%
			border-radius 100%

		div
			font-family Georgia
			font-size 16px
			color #FFFFFF
			line-height 24px
			text-align center
			width 75%
			margin auto

.main-content
	padding 30px 16px
	.expectations
		margin-bottom 80px

		h2
			text-align left
			margin-top 0
			margin-bottom 29

		.carousel__slide
			background-color $cyan
			padding 24px
			height calc(100% - 78px)
			width calc(100% - 48px)
			
			div
				font-family Georgia
				text-align left
				font-size 16px
				line-height 24px
	
	.portfolio
		h1
		h2
			text-align left
		h1
			margin-bottom 38px
		&__example
			&__description
				margin-top 16px
				font-family Georgia
				font-size 16px
				color #000000
				line-height 24px
			.carousel
				max-height 246px
				&__slide 
					img
						height 100%
						width 100%

footer
	display flex
	flex-direction column
	background-color $cyan
	padding 30px 16px

	h1
		text-align left

	ul
		li
			list-style-type none
			position relative
			margin 10px
			&:before 
				content ''
				display inline-block
				position absolute
				left -35px
				height 20px
				width 20px
				opacity 0.1
				background #000000
				border-radius 2px

	div
		font-family Georgia
		font-size 16px
		line-height 24px

	form
		padding-bottom 20px
		input
		textarea
		button
			font-family Georgia
			font-size 16px
			line-height 24px
			width calc(100% - 22px)
			border-radius 4px
			padding 11px
			border 1px solid rgba(0, 0, 0, .1)
			margin 10px 0px
			outline none
			

		button
		.file-container
			font-family Helvetica
			font-weight bold

		button
			background-color $orange
			color white
			width 100%

		.file-container
			display inline-block
			line-height 24px
			cursor pointer
			color $orange
			margin-bottom 30px

			span
				margin-right 10px
				font-size 21px

			[type=file]
				display none
			


@media (min-width: 368px) and (max-width: 400px) {
	  .main-content {
			.portfolio {
				&__example {
					.carousel {
						max-height: 50%;    
					}
				}
			}
		}
}
		


					





